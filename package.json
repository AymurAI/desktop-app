{
  "name": "data-genero",
  "version": "1.0.0",
  "private": true,
  "main": "build/renderer/main.js",
  "dependencies": {
    "@react-oauth/google": "^0.4.0",
    "@stitches/react": "^1.2.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "axios": "^1.1.3",
    "electron-squirrel-startup": "^1.0.0",
    "mammoth": "^1.5.1",
    "phosphor-react": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "react-scripts": "5.0.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "dev:web": "react-scripts start",
    "dev": "npm run build:renderer && concurrently 'BROWSER=none npm run dev:web' 'wait-on tcp:3000 && NODE_ENV=development electron-forge start'",
    "build:renderer": "tsc --build tsconfig.renderer.json",
    "build:app": "react-scripts build",
    "build": "npm run build:app && npm run build:renderer",
    "test": "react-scripts test",
    "lint": "eslint .",
    "lint:markdown": "markdownlint '**/*.md' --ignore node_modules --ignore CHANGELOG.md",
    "lint:fix": "eslint . --fix --ignore-path .gitignore .",
    "check-types:react": "tsc -p tsconfig.json",
    "check-types:renderer": "tsc -p tsconfig.renderer.json --noEmit",
    "validate": "npm run lint && npm run check-types:react",
    "pre-commit": "lint-staged",
    "deploy": "docker compose -f docker-compose.production.yml build && docker compose -f docker-compose.production.yml up -d",
    "package": "rm -rf build && npm run build:renderer && electron-forge package",
    "make": "rm -rf build && npm run build:renderer && electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.md": [
      "npm run lint:markdown --"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint"
    ],
    "renderer/**/*.ts": [
      "npm run lint"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "concurrently": "^7.5.0",
    "electron": "^21.2.0",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "prettier": "^2.7.1",
    "wait-on": "^6.0.1"
  }
}
